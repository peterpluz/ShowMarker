<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- Обязательный ключ для document-based app -->
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>

    <!-- Тип документа, который приложение открывает -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>ShowMarker Project</string>

            <key>LSHandlerRank</key>
            <string>Default</string>

            <!-- Пометить как package (полезно для macOS/Finder, не повредит iOS) -->
            <key>LSItemIsPackage</key>
            <true/>

            <key>LSItemContentTypes</key>
            <array>
                <string>com.peterpluz.showmarker.smark</string>
            </array>
        </dict>
    </array>

    <!-- ЭКСПОРТ СОБСТВЕННОГО UTType -->
    <key>UTExportedTypeDeclarations</key>
    <array>
        <dict>
            <key>UTTypeIdentifier</key>
            <string>com.peterpluz.showmarker.smark</string>

            <key>UTTypeDescription</key>
            <string>ShowMarker Project</string>

            <!-- Сигнал системе: это package-подобный тип -->
            <key>UTTypeConformsTo</key>
            <array>
                <string>com.apple.package</string>
                <string>public.data</string>
            </array>

            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>smark</string>
                </array>
                <key>public.mime-type</key>
                <string>application/x-showmarker</string>
            </dict>
        </dict>
    </array>

</dict>
</plist>
